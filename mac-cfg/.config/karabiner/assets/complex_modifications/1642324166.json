{
  "title": "Vi Style Arrows Pushing Simultaneously",
  "rules": [
    {
      "description": "Change right_command + h/j/k/l to Arrows",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "option",
                "caps_lock",
                "shift",
                "command",
                "control",
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "option",
                "caps_lock",
                "shift",
                "command",
                "control",
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "option",
                "caps_lock",
                "shift",
                "command",
                "control",
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "option",
                "caps_lock",
                "shift",
                "command",
                "control",
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "Change right_command + \\ to delete_forward",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "option",
                "caps_lock",
                "shift",
                "command",
                "control",
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_forward"
            }
          ]
        }
      ]
    },
    {
      "description": "Change right_command + ;, ' to page_up / page_down",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "option",
                "caps_lock",
                "shift",
                "command",
                "control",
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "page_up"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "option",
                "caps_lock",
                "shift",
                "command",
                "control",
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "page_down"
            }
          ]
        }
      ]
    },
    {
      "description": "Change right_command + [, ] to home, end",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "option",
                "caps_lock",
                "shift",
                "command",
                "control",
                "fn"
              ]
            }
          },
          "to": [
              {
                  "key_code": "left_arrow",
                  "modifiers": "command"
              }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "option",
                "caps_lock",
                "shift",
                "command",
                "control",
                "fn"
              ]
            }
          },
          "to": [
              {
                  "key_code": "right_arrow",
                  "modifiers": "command"
              }
          ]
        }
      ]
    },
    {
      "description": "Change right_command + b, . to back word, fwd word",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "option",
                "caps_lock",
                "shift",
                "command",
                "control",
                "fn"
              ]
            }
          },
          "to": [
              {
                  "key_code": "left_arrow",
                  "modifiers": "option"
              }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "option",
                "caps_lock",
                "shift",
                "command",
                "control",
                "fn"
              ]
            }
          },
          "to": [
              {
                  "key_code": "right_arrow",
                  "modifiers": "option"
              }
          ]
        }
      ]
    },
    {
      "description": "Disable arrow keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
              "modifiers": {
                  "optional": [
                      "option",
                      "caps_lock",
                      "shift",
                      "command",
                      "control",
                      "fn"
                  ]
              },
            "key_code": "up_arrow"
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
              "modifiers": {
                  "optional": [
                      "option",
                      "caps_lock",
                      "shift",
                      "command",
                      "control",
                      "fn"
                  ]
              },
            "key_code": "down_arrow"
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
              "modifiers": {
                  "optional": [
                      "option",
                      "caps_lock",
                      "shift",
                      "command",
                      "control",
                      "fn"
                  ]
              },
            "key_code": "left_arrow"
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
              "modifiers": {
                  "optional": [
                      "option",
                      "caps_lock",
                      "shift",
                      "command",
                      "control",
                      "fn"
                  ]
              },
            "key_code": "right_arrow"
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ]
        }
      ]
    },
    {
      "description": "Disable cmd+h",
      "manipulators": [
          {
              "type": "basic",
              "from": {
                  "modifiers": {
                      "mandatory": [
                          "left_command"
                      ],
                      "optional": [
                          "option",
                          "caps_lock",
                          "shift",
                          "command",
                          "control",
                          "fn"
                      ]
                  },
                  "key_code": "h"
              },
              "to": [
                  {
                      "key_code": "vk_none"
                  }
              ]
          }
      ]
    }
  ]
}

